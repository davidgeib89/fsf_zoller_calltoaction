<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sheet1>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Title</sheetTitle>
                    <sheetDescription>Descr.</sheetDescription>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.type>
						<TCEforms>
							<label>Anzeige Version</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
                                    <numIndex index="0" type="array">
										<numIndex index="0">Überschrift, Schriftzug, Button</numIndex>
										<numIndex index="1">v2</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Icon, Schriftzug, Button</numIndex>
										<numIndex index="1">v1</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.type>
                    <settings.color>
						<TCEforms>
							<label>Hintergrundfarbe</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">Grau</numIndex>
										<numIndex index="1">grey</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Weiß</numIndex>
										<numIndex index="1">white</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.color>
                    <settings.distance>
						<TCEforms>
							<label>Abstand nach Unten</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">normaler Abstand</numIndex>
										<numIndex index="1">distance</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">kein Abstand</numIndex>
										<numIndex index="1">nodistance</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.distance>
                    <settings.svg>
						<TCEforms>
							<label>Icon</label>
                            <displayCond>FIELD:settings.type:=:v1</displayCond>
							<config>										
								<type>group</type>
								<internal_type>file</internal_type>
								<allowed>svg, png, jpg</allowed>
								<max_size>10000</max_size>
								<uploadfolder>uploads/tx_fsfzollercalltoaction</uploadfolder>
								<maxitems>1</maxitems>
								<size>1</size>
								<selectedliststyle>Width:180px</selectedliststyle>
							</config>
						</TCEforms>
					</settings.svg>
                    <settings.headline>
                        <TCEforms>
                            <label>Überschrift</label>
                            <displayCond>FIELD:settings.type:!=:v1</displayCond>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                                <size>30</size>
                            </config>
                        </TCEforms>
                    </settings.headline>
                    <settings.text>
                    <TCEforms>
                            <label>Text</label>
                            <config>
                                <type>text</type>
                                <rows>5</rows>
                                <cols>30</cols>
                                <eval>trim,required</eval>
                                <enableRichtext>1</enableRichtext>
                                <richtextConfiguration>default</richtextConfiguration>
                            </config>
                        </TCEforms>
                    </settings.text>
                    <settings.buttontext1>
                        <TCEforms>
                            <label>Buttontext</label>
                            <config>
                                <type>input</type>
                                <eval>trim</eval>
                                <size>30</size>
                            </config>
                        </TCEforms>
                    </settings.buttontext1>
                    <settings.url1>
                        <TCEforms>
                            <label>Buttonlink</label>
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <max>256</max>
                                <eval>trim</eval>
                                <renderType>inputLink</renderType>
                                <softref>typolink</softref>
                            </config>
                        </TCEforms>
                    </settings.url1>
                </el>
            </ROOT>
        </sheet1>
    </sheets>
</T3DataStructure>
